{
  "stm32f4dis": {
    "init": [
      {
        "cmd": "function(genromfs)",
        "args": ["%{iotjs}/test", "%{nuttx-apps}/nshlib/nsh_romfsimg.h"]
      }
    ],
    "build": {
      "cwd": "%{iotjs}",
      "cmd": "tools/build.py",
      "args": [
        "--clean",
        "--no-parallel-build",
        "--no-init-submodule",
        "--target-arch=arm",
        "--target-os=nuttx",
        "--target-board=stm32f4dis",
        "--jerry-heaplimit=64",
        "--buildtype=%{build-type}",
        "--nuttx-home=%{nuttx}",
        "--profile=test/profiles/nuttx.profile"
      ],
      "conditional-options": [
        {
          "condition": "%{coverage}",
          "args": [
            "--buildtype=debug",
            "--jerry-debugger",
            "--no-snapshot"
          ]
        },
        {
          "condition": "%{memstat}",
          "args": ["--jerry-memstat"]
        },
        {
          "condition": "%{minimal-profile-build}",
          "args": ["--profile=profiles/minimal.profile"]
        },
        {
          "condition": "%{test-build}",
          "args": [
            "--external-modules=test/external_modules/mymodule1,test/external_modules/mymodule2",
            "--cmake-param=-DENABLE_MODULE_MYMODULE1=ON",
            "--cmake-param=-DENABLE_MODULE_MYMODULE2=ON"
          ]
        }
      ]
    },
    "artifacts": [
      {
        "src": "%{iotjs}/build/%{target}/%{build-type}/lib",
        "dst": "%{build-dir}/libs"
      },
      {
        "src": "%{iotjs}/test",
        "dst": "%{build-dir}/tests"
      }
    ]
  },
  "artik053": {
    "build": {
      "env": {
        "IOTJS_ROOT_DIR": ["%{iotjs}"],
        "IOTJS_BUILD_OPTION": [
          "--clean",
          "--no-parallel-build",
          "--no-init-submodule",
          "--target-arch=arm",
          "--target-os=tizenrt",
          "--target-board=artik05x",
          "--buildtype=%{build-type}",
          "--profile=test/profiles/tizenrt.profile"
        ]
      },
      "conditional-options": [
        {
          "condition": "%{coverage}",
          "env": {
            "IOTJS_BUILD_OPTION": [
              "--buildtype=debug",
              "--jerry-debugger",
              "--no-snapshot"
            ]
          }
        },
        {
          "condition": "%{coverage} and %{test-build}",
          "env": {
            "IOTJS_BUILD_OPTION": [
              "--jerry-cmake-param=-DJERRY_PORT_DEFAULT=ON",
              "--compile-flag=-isystem %{tizenrt}/os/include"
            ]
          }
        },
        {
          "condition": "%{test-build}",
          "env": {
            "IOTJS_BUILD_OPTION": [
              "--external-modules=test/external_modules/mymodule1,test/external_modules/mymodule2",
              "--cmake-param=-DENABLE_MODULE_MYMODULE1=ON",
              "--cmake-param=-DENABLE_MODULE_MYMODULE2=ON"
            ]
          }
        },
        {
          "condition": "%{memstat}",
          "env": { "IOTJS_BUILD_OPTION": ["--jerry-memstat"] }
        },
        {
          "condition": "%{minimal-profile-build}",
          "env": { "IOTJS_BUILD_OPTION": ["--profile=profiles/minimal.profile"] }
        }
      ]
    },
    "artifacts": [
      {
        "src": "%{iotjs}/build/%{target}/%{build-type}/lib",
        "dst": "%{build-dir}/libs"
      },
      {
        "src": "%{iotjs}/test",
        "dst": "%{build-dir}/tests"
      }
    ]
  },
  "artik530": {
    "build": {
      "cwd": "%{iotjs}",
      "cmd": "config/tizen/gbsbuild.sh",
      "args": ["--clean"],
      "env": {
        "IOTJS_BUILD_OPTION": [
          "--clean",
          "--no-parallel-build",
          "--no-init-submodule",
          "--target-arch=noarch",
          "--target-os=tizen",
          "--target-board=rpi3",
          "--buildtype=%{build-type}",
          "--profile=test/profiles/tizen.profile"
        ]
      },
      "conditional-options": [
        {
          "condition": "'%{build-type}' == 'debug'",
          "args": ["--debug"]
        },
        {
          "condition": "%{coverage}",
          "env": {
            "IOTJS_BUILD_OPTION": [
              "--buildtype=debug",
              "--jerry-debugger",
              "--no-snapshot"
            ]
          }
        },
        {
          "condition": "%{coverage} or %{memstat}",
          "env": { "IOTJS_BUILD_OPTION": ["--compile-flag=-g", "--jerry-compile-flag=-g"] }
        },
        {
          "condition": "%{memstat}",
          "env": { "IOTJS_BUILD_OPTION": ["--jerry-memstat"] }
        },
        {
          "condition": "%{minimal-profile-build}",
          "env": { "IOTJS_BUILD_OPTION": ["--profile=profiles/minimal.profile"] }
        },
        {
          "condition": "%{test-build}",
          "env": {
            "IOTJS_BUILD_OPTION": [
              "--external-modules=test/external_modules/mymodule1,test/external_modules/mymodule2",
              "--cmake-param=-DENABLE_MODULE_MYMODULE1=ON",
              "--cmake-param=-DENABLE_MODULE_MYMODULE2=ON"
            ]
          }
        }
      ]
    },
    "artifacts": [
      {
        "src": "%{gbs-iotjs}/build/%{target}/%{build-type}/lib",
        "dst": "%{build-dir}/libs"
      },
      {
        "src": "%{gbs-iotjs}/build/%{target}/%{build-type}/bin/iotjs",
        "dst": "%{build-dir}/iotjs"
      },
      {
        "src": "%{gbs-iotjs}/build/%{target}/%{build-type}/iotjs.map",
        "dst": "%{build-dir}/linker.map"
      },
      {
        "src": "%{gbs-iotjs}/test",
        "dst": "%{build-dir}/tests"
      }
    ]
  },
  "rpi2": {
    "build": {
      "cwd": "%{iotjs}",
      "cmd": "tools/build.py",
      "args": [
        "--clean",
        "--no-parallel-build",
        "--no-init-submodule",
        "--target-arch=arm",
        "--target-os=linux",
        "--target-board=rpi2",
        "--buildtype=%{build-type}",
        "--profile=test/profiles/rpi2-linux.profile"
      ],
      "conditional-options": [
        {
          "condition": "%{coverage}",
          "args": [
            "--buildtype=debug",
            "--jerry-debugger",
            "--no-snapshot"
          ]
        },
        {
          "condition": "%{coverage} or %{memstat}",
          "args": ["--compile-flag=-g", "--jerry-compile-flag=-g"]
        },
        {
          "condition": "%{memstat}",
          "args": ["--jerry-memstat"]
        },
        {
          "condition": "%{minimal-profile-build}",
          "args": ["--profile=profiles/minimal.profile"]
        },
        {
          "condition": "%{test-build}",
          "args": [
            "--external-modules=test/external_modules/mymodule1,test/external_modules/mymodule2",
            "--cmake-param=-DENABLE_MODULE_MYMODULE1=ON",
            "--cmake-param=-DENABLE_MODULE_MYMODULE2=ON"
          ]
        }
      ]
    },
    "artifacts": [
      {
        "src": "%{iotjs}/build/%{target}/%{build-type}/lib",
        "dst": "%{build-dir}/libs"
      },
      {
        "src": "%{iotjs}/build/%{target}/%{build-type}/bin/iotjs",
        "dst": "%{build-dir}/iotjs"
      },
      {
        "src": "%{iotjs}/build/%{target}/%{build-type}/iotjs.map",
        "dst": "%{build-dir}/linker.map"
      },
      {
        "src": "%{iotjs}/test",
        "dst": "%{build-dir}/tests"
      }
    ]
  }
}
