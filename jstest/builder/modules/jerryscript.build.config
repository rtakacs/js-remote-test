{
  "stm32f4dis": {
    "init": [
      {
        "cmd": "native(genromfs)",
        "args": ["%{jerryscript}/tests/jerry/", "%{nuttx-apps}/nshlib/nsh_romfsimg.h"]
      }
    ],
    "build": {
      "cwd": "%{jerryscript}",
      "cmd": "tools/build.py",
      "args": [
        "--clean",
        "--lto=OFF",
        "--jerry-cmdline=OFF",
        "--jerry-libm=ON",
        "--all-in-one=OFF",
        "--mem-heap=70",
        "--profile=%{jerryscript}/jerry-core/profiles/es2015-subset.profile",
        "--toolchain=%{jerryscript}/cmake/toolchain_mcu_stm32f4.cmake",
        "--compile-flag=-I%{jerryscript}/targets/nuttx-stm32f4",
        "--compile-flag=-isystem %{nuttx}/include"
      ],
      "conditional-options": [
        {
          "condition": "'%{build-type}' == 'debug'",
          "args": ["--debug"]
        },
        {
          "condition": "%{memstat}",
          "args": ["--mem-stats=ON"]
        },
        {
          "condition": "%{minimal-profile-build}",
          "args": ["--profile=%{jerryscript}/jerry-core/profiles/minimal.profile"]
        }
      ]
    },
    "artifacts": [
      {
        "src": "%{jerryscript}/build/lib",
        "dst": "%{build-dir}/libs"
      },
      {
        "src": "%{jerryscript}/tests/jerry",
        "dst": "%{build-dir}/tests"
      }
    ]
  },
  "artik053": {
    "build": {
      "cwd": "%{jerryscript}",
      "cmd": "tools/build.py",
      "args": [
        "--clean",
        "--lto=OFF",
        "--jerry-cmdline=OFF",
        "--jerry-libm=ON",
        "--all-in-one=OFF",
        "--mem-heap=70",
        "--profile=%{jerryscript}/jerry-core/profiles/es2015-subset.profile",
        "--toolchain=%{jerryscript}/cmake/toolchain_mcu_artik053.cmake",
        "--compile-flag=-isystem %{tizenrt}/os/include"
      ],
      "env": {
        "JERRYSCRIPT_ROOT_DIR": "%{jerryscript}"
      },
      "conditional-options": [
        {
          "condition": "'%{build-type}' == 'debug'",
          "args": ["--debug"]
        },
        {
          "condition": "%{memstat}",
          "args": ["--mem-stats=ON"]
        },
        {
          "condition": "%{minimal-profile-build}",
          "args": ["--profile=%{jerryscript}/jerry-core/profiles/minimal.profile"]
        }
      ]
    },
    "artifacts": [
      {
        "src": "%{jerryscript}/build/lib",
        "dst": "%{build-dir}/libs"
      },
      {
        "src": "%{jerryscript}/tests/jerry",
        "dst": "%{build-dir}/tests"
      }
    ]
  },
  "rpi2": {
    "build": {
      "cwd": "%{jerryscript}",
      "cmd": "tools/build.py",
      "args": [
        "--clean",
        "--lto=OFF",
        "--jerry-libm=ON",
        "--all-in-one=OFF",
        "--linker-flag=-Wl,-Map=jerry.map",
        "--toolchain=%{jerryscript}/cmake/toolchain_linux_armv7l.cmake",
        "--profile=%{jerryscript}/jerry-core/profiles/es2015-subset.profile"
      ],
      "conditional-options": [
        {
          "condition": "%{memstat}",
          "args": ["--mem-stats=ON"]
        },
        {
          "condition": "%{coverage} or %{memstat}",
          "args": ["--debug"]
        },
        {
          "condition": "%{minimal-profile-build}",
          "args": ["--profile=profiles/minimal.profile"]
        }
      ]
    },
    "artifacts": [
      {
        "src": "%{jerryscript}/build/%{target}/%{build-type}/lib",
        "dst": "%{build-dir}/libs"
      },
      {
        "src": "%{jerryscript}/build/bin/jerry",
        "dst": "%{build-dir}/jerry"
      },
      {
        "src": "%{jerryscript}/build/jerry-main/jerry.map",
        "dst": "%{build-dir}/linker.map"
      },
      {
        "src": "%{jerryscript}/tests/jerry",
        "dst": "%{build-dir}/tests"
      }
    ]
  }
}
